---
import Section from "../Section.astro"
import { work } from "@cv"

---
<Section title="Experiencia Laboral">
    <ul>
        {
            work.map(
                ({name, startDate, endDate, position, summary, highlights, url}) =>{
                    const startYear = new Date(startDate).getFullYear()
                    const endYear =
                        endDate != null? new Date(endDate).getFullYear() : "Actual"
                    const years = ` ${startYear} - ${endYear} `

                    return(
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>
                                            <a href={url}
                                            title={`Ver ${name}`}
                                            target="_blank"
                                            >
                                            {name}
                                            </a>
                                        </h3>
                                        <h4>
                                            {position}
                                        </h4>
                                    </div>
                                    <time >
                                        {years}
                                    </time>
                                </header>
                                <footer>
                                    <p>{summary}</p>
                                </footer>
                            </article>
                        </li>
                    )
                }
            )
        }
    </ul>
</Section>
<style>
     ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    font-weight: 600;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 600;
    line-height: 1.5rem;
    font-size: .875rem;
  }
  header{
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	margin-bottom: 4px;
  }


  

  time {
    text-align: right;
    color: #555;
    font-size: 0.85rem;
    font-weight: 400;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>